{% extends 'base.html.twig' %}

{% block title %}Rates index{% endblock %}

{% block body %}
    <h1>Rates index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rate</th>
                <th>Nickname</th>
                <th>IdMovie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rate in rates %}
            <tr>
                <td>{{ rate.id }}</td>
                <td>{{ rate.rate }}</td>
                <td>{{ rate.nickname }}</td>
                <td>{{ rate.idMovie }}</td>
                <td>
                    <a href="{{ path('app_rates_show', {'id': rate.id}) }}">show</a>
                    <a href="{{ path('app_rates_edit', {'id': rate.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rates_new') }}">Create new</a>
{% endblock %}
